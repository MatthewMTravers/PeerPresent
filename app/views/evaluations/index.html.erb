<head>
  <title><%= @current_student.fname %>'s Evaluations</title>
  <%= stylesheet_link_tag 'userhomepage', media: 'all' %>
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.2/css/all.min.css" />
</head>

<body>
    <div class="container">
        <aside>
            <nav>
                <ul>
                    <li><a href="/student/home">Dashboard</a></li>
                    <li><a href="/evaluations/new">Create New Evaluation</a></li>
                    <li><a href="/presentations">View Presentations</a></li>
                    <li><a href="/evaluations">View Evaluations</a></li>
                    <li><a href="/student/edit">Edit Profile</a></li>
                    <li><%= link_to 'Logout', logout_path, method: :delete %></li>
                </ul>
            </nav>
        </aside>      
        <main>
            <h1><%= @current_student.fname %>'s Evaluations</h1>
            <div class="cards">
                <div class="card">
                    <% if @evaluations.any? %>
                        <h2>Evaluations for Presentations</h2> 
                        <ul>
                            <% @evaluations.each do |eval| %>
                                    <li>
                                    <strong>Presentation:</strong> <%= eval.presentation.title %><br>
                                    <strong>Score:</strong> <%= eval.score %><br>
                                    <strong>Comments:</strong> <%= eval.feedback %>
                                    </li>
                            <% end %>
                        </ul>
                    <% else %>
                        <ul>
                            <li>No evaluations found for <%= @current_student.fname %></li>
                        </ul>
                    <% end %>
                </div>
            </div>
        </main>
    </div>
</body>
</html>