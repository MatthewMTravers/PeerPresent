<head>
  <%= stylesheet_link_tag 'userhomepage', media: 'all' %>
</head>

<p style="color: green"><%= notice %></p>
<div class="container">
  <aside>
  <nav>
      <ul>
        <li><a href="/student/home">Dashboard</a></li>
        <li><a href="/evaluations/new">Create New Evaluation</a></li>
        <li><a href="/presentations">View Presentations</a></li>
        <li><a href="/student/edit">Edit Profile</a></li>
        <li><%= link_to 'Logout', logout_path, method: :delete %></li>
      </ul>
  </nav>
  </aside>

  <main>
      <h1>Presentations</h1>
    <div class="cards">

      <div id="presentations" class="card">
        <%count = @presentations.length%>
        <%i = 0%>
        <% @presentations.each do |presentation| %>
          <%= render presentation %>
          <p>
            <%= link_to "Show this presentation", presentation %>
          </p>
          <%if i < count - 1%>
            <br>
          <%end%>
          <%i =+ 1%>
        <% end %>
      </div>
    </div>
  </main>
</div>
