<%= form_with(model: presentation) do |form| %>
  <% if presentation.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(presentation.errors.count, "error") %> prohibited this presentation from being saved:</h2>

      <ul>
        <% presentation.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <h2><%= form.label :title, style: "display: block" %></h2>
    <%= form.text_field :title, style: "margin-bottom: 10px;" %>
  </div>

  <div>
    <h2><%= form.label :content, style: "display: block" %></h2>
    <%= form.text_field :content, style: "margin-bottom: 10px;" %>
  </div>

  <div>
    <h2><%= form.label :date, style: "display: block" %></h2>
    <%= form.date_field :date, style: "margin-bottom: 10px;" %>
  </div>

  <div>
    <h2><%= form.label :student_id, "Select Student", style: "display: block" %></h2>
    <%= form.collection_select :student_id, @students, :id, ->(student) { "#{student.fname} #{student.lname}" }, { prompt: 'Select a Student' }, { class: 'select' } %>
  </div>

  <div>
    <%= form.submit %>
  </div>
<% end %>
