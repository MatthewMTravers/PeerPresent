<head>
 <link rel="stylesheet" href="/assets/session.css" media="all" />
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.2/css/all.min.css" />
</head>

<p style="color: green"><%= notice %></p>

<div class="container">
  <div class="wrapper">
    <%= render @presentation %>

    <div class="indentation">
      <%= link_to "Edit this presentation", edit_presentation_path(@presentation) %> |
      <%= link_to "Back to dashboard", faculty_home_path%> |
    </div>
    <%= button_to "Destroy this presentation", @presentation, method: :delete %>
    
    <div>
      <%= form_with(model: @presentation, url: presentation_path(@presentation), method: :patch) do |form| %>
        <div class="row">
          <%= form.label :grade %>
          <%= form.number_field :grade, in: 0..100 %>
        </div>
        <div class="row button">
          <%= form.submit 'Grade Presentation' %>
        </div>
      <% end %>
    </div>
  </div>
</div>
